#!/bin/bash
cd ./../deps/
chmod -R 755 libssh
chmod -R 755 google-breakpad

unamestr=$(uname)

if [[ "$unamestr" == 'Linux' ]]; then

#build libsssh only on linux
cd ./libssh
sh ./configure  --with-openssl --with-libz
make
sudo make install

sudo bash -c 'echo "/usr/local/lib" > /etc/ld.so.conf.d/libssh2.conf'
sudo ldconfig

cd ./../google-breakpad
./configure && make
sudo make install

else

cd ./google-breakpad
./configure && make
sudo make install

fi



